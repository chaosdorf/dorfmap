<div class="tiled">

% for my $area (sort keys %{$areas}) {
<h1><%= $area %></h1>
% for my $location (@{ $areas->{$area} }) {
% my $type = $coordinates->{$location}->{type};
<a class="<%= statusclass($type, $location) %>"
href="<%= statuslink($type, $location) %>"> <%= $coordinates->{$location}->{text} %> </a>
% }
% }

</div> <!-- tiles -->
