% if (@{$errors}) {
<div class="errors">
<ul>
% for my $error (@{$errors}) {
<li><%= $error %></li>
% }
</ul>
</div>
% }

% my $red = param('red') // 0;
% my $green = param('green') // 255;
% my $blue = param('blue') // 255;

%= javascript begin

var red = <%= $red %>;
var green = <%= $green %>;
var blue = <%= $blue %>;

function updatered(newred) {
	red = newred;
	updatecolor();
}

function updategreen(newgreen) {
	green = newgreen;
	updatecolor();
}

function updateblue(newblue) {
	blue = newblue;
	updatecolor();
}

function updatecolor() {
	document.getElementById("rgbcolor").innerHTML = red + ", " + green + ", " + blue;
	document.getElementById("rgbcolor").style.backgroundColor = "rgb(" + red + "," + green + "," + blue + ")";
}

%= end

<div class="blinkencontrol">

<a class="backlink" href="/">‚Üê back</a>

<div class="presets">

% for my $preset ([255, 0, 0], [0, 255, 0], [0, 0, 2556],
%	[255, 255, 0], [0, 255, 255], [255, 0, 255],
%	[255, 255, 255], [0, 0, 0]) {
<a class="preset" style="background-color: rgb(<%= join(', ', @{$preset}) %>)"
href="?red=<%= $preset->[0] %>&amp;green=<%= $preset->[1] %>&amp;blue=<%= $preset->[2] %>&amp;opmode=steady">&nbsp;</a>
% }

<div style="clear: both"> </div>

</div> <!-- presets -->

<div id="rgbcolor"></div>
%= form_for "/blinkencontrol/$device" => begin
<table>
<tr><th>red</th><td> <%= range_field red => 0, min => 0, max => 255, onchange => 'updatered(this.value)' %></td></tr>
<tr><th>green</th><td> <%= range_field green => 255, min => 0, max => 255, onchange => 'updategreen(this.value)' %></td></tr>
<tr><th>blue</th><td> <%= range_field blue => 255, min => 0, max => 255, onchange => 'updateblue(this.value)' %></td></tr>
<tr><th>speed</th><td> <%= range_field speed => 16, min => 0, max => 31 %></td></tr>
</table>
<%= radio_button opmode => 'steady' %> steady<br/>
<%= radio_button opmode => 'blinkrgb' %> RGB (hard transition)<br/>
<%= radio_button opmode => 'blinkrand' %> random (hard transition)<br/>
<!-- <%= radio_button opmode => 'fadeonoff' %> fade on/off<br/> -->
<%= radio_button opmode => 'fadergb' %> RGB (fading)<br/>
<%= radio_button opmode => 'faderand' %> random (fading)<br/>
%= submit_button 'Apply';
%= end
</div> <!-- blinkencontrol -->


%= javascript begin
updatecolor();
%= end
