<!DOCTYPE html>
<html>
<head>
	<title>Dorfmap v<%= $version %></title>
	<meta charset="UTF-8">
	<meta http-equiv="refresh" content="60" />


	<style type="text/css">

	html {
		font-family: Sans-Serif;
	}

	.overview {
		background-image: url(/map.png);
		width: 2202px;
		height: 648px;
		position: absolute;
	}

	.overview > * {
		/* overflow: hidden; */
	}

	.overview > * > .popup {
		visibility: hidden;
		position: absolute;
		top: 10px;
		left: 10px;
		z-index: 1;
		border: 1px solid gray;
		background-color: white;
		opacity: .90;
		min-width: 200px;
	}
	
	.overview > *:hover > .popup,
	.overview > * > .popup:hover {
		visibility: visible;
	}

/*
	.overview > *:hover {
		background-color: gray;
		opacity: .20;
	}
*/

	.overview .popup a {
		color: #000099;
		text-decoration: none;
	}

	.overview .open {
		background-color: green;
		opacity: .50;
	}

	.overview .closed {
		background-color: black;
		opacity: .50;
	}

	.overview .unknown {
		background-color: red;
	}

% for my $location (keys %{$coordinates}) {
%    my %coord = %{$coordinates->{$location}};
	.overview #<%= $location %> {
		position: absolute;
		left: <%= $coord{x1} %>px;
		top: <%= $coord{y1} %>px;
		width: <%= $coord{x2} %>px;
		height: <%= $coord{y2} %>px;
	}

% }

	</style>
</head>
<body>

<div class="content">
%= content
</div>

</body>
</html>
